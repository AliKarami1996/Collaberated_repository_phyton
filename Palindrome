name = str(input("Enter a word: "))
palindrome = True

for i in range(len(name)//2):

    if name[i] != name[len(name) - i - 1]:
        palindrome = False
        break

if palindrome:
    print(name, "is a palindrome")

elif not palindrome:
    print(name, "is not a palindrome")



